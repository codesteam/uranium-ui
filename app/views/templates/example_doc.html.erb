documentor: '1.0'
info:
  title: Dummy API
  description:
    This is example documentation for some dummy 
    photos API.
  version: 0.1 beta
paths:
  /photos:
    query: GET
    description: Return photos array.
    parameters:
      - name: page
        in: query
        description: Current page number
        required: no
        type: integer
      - name: page_size
        in: query
        description: Listing page size
        required: no
        type: integer
    responses:
        200:
          description: An array of photos
          type: array_of_photo
  /photos/new:
    query: POST
    description: Upload new photo.
    parameters:
      - name: photo
        in: query
        description: Common photo info
        required: yes
        type: array_of_photo
    responses:
        default:
          description: An array of results
          type: array_of_error
definitions:
  photo:
    name: string
    extension: string
    dimensions: photo_dimensions
  photo_dimensions:
    width: integer
    height: integer
  error:
    code: integer
    description: string